@model List<Core.CourseInsurance>
@{
    ViewBag.Title = "User Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserResults</h2>

<section>
    <div class="pr_bg"></div>
    <div class="container_m">
        <div class="trp">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-trophy" aria-hidden="true"></i>
        </div>
    </div>
</section>
<section class="rslt_main">
    <div class="container_m">
        <div class="srch_m">
            @using (Html.BeginForm())
            {
                <input type="text" placeholder="Search By Course Name" name="CourseName">
                <input type="text" placeholder="Search By Date" name="TestDate">
                <button class="btn green">
                    <i class="fa fa-search"></i> Search
                </button>
            }
          
        </div>
        @foreach (var item in Model)
        {
            <div class="rslt">
                <div class="crs_nm_rslt">@item.CourseName</div>               
                <div class="rslt_dt"><i class="fa fa-calendar"></i> @item.TestDate</div>
                <div class="scr_rslt">
                    <i class="fa fa-trophy"></i> <span>@item.Score</span>
                </div>
            </div>
        }


    </div>
</section>